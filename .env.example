# Application
PORT=3000
NODE_ENV=development
CORS_ORIGIN=*

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_EMBEDDING_MODEL=text-embedding-004

# Vector Database (ChromaDB)
VECTOR_PROVIDER=chroma
# Use "disabled" to skip ChromaDB (app starts but RAG won't work)
# Or "http://localhost:8000" after running: docker-compose up -d
CHROMA_URL=disabled
COLLECTION_NAME=ai-assistant-docs

# AWS S3 (Optional - for S3 document source)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-bucket-name

# MySQL (Optional - for MySQL knowledge base)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USERNAME=root
MYSQL_PASSWORD=your-mysql-password
MYSQL_DATABASE=ai_assistant

# File Upload Configuration
MAX_FILE_SIZE=10485760
# 10MB in bytes

# Document Ingestion
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Chat Configuration
CHAT_TOP_K=5
CHAT_TEMPERATURE=0.7
CHAT_MAX_TOKENS=2048
# Relevance threshold (0-1): If search results score below this, use AI generation
CHAT_RELEVANCE_THRESHOLD=0.5
