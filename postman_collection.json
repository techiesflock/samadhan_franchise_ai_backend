        {
          "name": "Get Document Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/documents/stats",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "documents",
                "stats"
              ]
            }
          }
